FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy project files
COPY pyproject.toml uv.lock README.md ./
COPY src/ ./src/

# Install uv
RUN pip install uv

# Install dependencies
RUN uv sync --extra context --frozen

# Expose port
EXPOSE 8001

# Run the application
CMD ["uv", "run", "--extra", "context", "python", "-m", "src.disney.context_service.main"]
